body { 
    margin:0;
    padding:0;
    font-family:helvetica, sans-serif; 
	
}

a { 
    color:#3244ff;
    text-decoration:none; 
}

h1 { 
    font-weight:normal;
    border-bottom:1px solid #1168ff;
    padding:0 0 30px 0;
	color: #3243f9;
	font-size: 30pt;
}

h2 {
    font-weight:normal;
    margin:30px 0 0;
	font-size: 20pt;
	color: white;
}

#content { 
    float:left;
    width:60%;
    padding:0 0 0 30px; 
	color: #000000;
	font-size: 15pt
}

#sidebar { 
    float:right;
    width:30%;
    padding:15px;
    background:#cc0033; 
    height:100%;
	font-size: 15pt
}

p.date { 
 
    font-family: Times New Roman, serif;
    font-size: 10pt;
    font-style: Times New Roman; 
	color: white;
}

/* pagination */
.pagination { 
    margin:45px 0; 
    font-weight:bold;
}

/* forms */
label { 
    float:left;
    clear:both;
    color:#3243f9;
    margin-bottom:4px; 
}
input, textarea { 
    clear:both;
    float:left;
    margin:0 0 10px;
    background:#ededed;
    border:0;
    padding:6px 10px;
    font-size:12px;
}
input[type=submit] {
    font-weight:bold;
    background:#00abff;
    color:#fff;
    padding:10px 20px;
    font-size:14px;
    text-transform:uppercase; 
}
.errorlist { 
    color:#cc0033;
    float:left;
    clear:both;
    padding-left:30px; 
}

/* comments */
.comment {
    padding:30px;
}
.comment:nth-child(even) {
    background:#efefef;
}
.comment .info {
    font-weight:bold;
    font-size:18px;
    color:#000000;;
}

